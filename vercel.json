{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/streams/users", "dest": "/api/streamsUsers.js" },
    { "src": "/api/games/top", "dest": "/api/gamesTop.js" },
    { "src": "/api/streams", "dest": "/api/streams.js" },
    { "src": "/api/users", "dest": "/api/users.js" },
    { "src": "/api/test", "dest": "/api/test.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}